.ai-answer-body em.highlight {
    font-style: normal; /* Keep this to prevent italics */
    border-bottom: none; /* No underline by default */
}

.ai-answer-body .positive-amount,
.ai-answer-body .negative-amount {
    color: inherit; /* Use the default text color */
    font-weight: normal; /* Use the default font weight */
}

/* These rules turn the highlights ON when the parent container has the correct data-attribute */
div[data-highlight-keywords="true"] .ai-answer-body em.highlight {
    border-bottom: 2px solid rgba(0, 212, 170, 0.7); /* Teal underline */
}
div[data-highlight-numbers="true"] .ai-answer-body .positive-amount {
    color: var(--positive-color); /* Blue for positive */
    font-weight: 700;
}
div[data-highlight-numbers="true"] .ai-answer-body .negative-amount {
    color: var(--negative-color); /* Red for negative */
    font-weight: 700;
}

