/* === FINAL, WORKING ANIMATION FIX === */
.animated-header-container {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

/* The parent H1 now directly contains the gradient styles */
.animated-header {
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    -webkit-background-clip: text;
    background-clip: text;
}

/* The individual letters start with a transparent fill and are moved down */
.animated-header span {
    display: inline-block;
    -webkit-text-fill-color: transparent; /* KEY CHANGE: Start with a transparent fill */
    transform: translateY(20px);
    animation-fill-mode: forwards;
}

.owl-logo-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 2.25rem;
    line-height: 1;
    color: var(--accent-primary);
    font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 0, 'opsz' 48;
    text-shadow: 0 0 12px rgba(14, 165, 233, 0.35);
}

/* When .animate is added, trigger the animation */
.animate .animated-header span {
    animation: gradient-letter-appear 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    animation-delay: calc(var(--i) * 0.07s);
}

/* The animation reveals the gradient fill and moves the letter up */
@keyframes gradient-letter-appear {
    to {
        -webkit-text-fill-color: unset; /* KEY CHANGE: This reveals the gradient */
        transform: translateY(0);
    }
}

/* The underline animation remains the same */
.animate .animated-header-container::after {
    content: '';
    position: absolute;
    height: 2px;
    bottom: -4px;
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    animation: underline-grow 0.6s ease-out forwards;
    animation-delay: 0.7s;
}

@keyframes underline-grow {
    from { width: 0%; left: 50%; }
    to { width: 100%; left: 0; }
}

