/* === NEW: AI Icon Shine Animation === */
@keyframes icon-shine-sweep {
    from { background-position: 200% center; }
    to { background-position: -200% center; }
}

.ai-icon-shine-effect {
    /* The base color of the icon is set by the gradient */
    background: linear-gradient(
        110deg,
        var(--ai-color),
        var(--ai-color),
        #ffffff, /* The white highlight that sweeps across */
        var(--ai-color),
        var(--ai-color)
    );
    /* This makes the gradient show through the icon's shape */
    -webkit-background-clip: text;
    background-clip: text;
    /* This makes the icon's actual color transparent */
    color: transparent;
    
    background-size: 200% 100%;
    animation: icon-shine-sweep 3s linear infinite;
}

/* Base styles for any shining icon */
.ai-icon-shine,
.bot-icon-shine {
    /* This makes the icon's color transparent so the background gradient can show through */
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    
    /* The gradient is twice as wide as the icon to create the sweep effect */
    background-size: 200% 100%;
    
    /* Apply the animation */
    animation: shine-sweep 3s linear infinite;
}

/* This creates the PURPLE shine for AI mode */
.ai-icon-shine {
    background-image: linear-gradient(
        110deg,
        var(--ai-color),
        var(--ai-color),
        #ffffff, /* The white highlight */
        var(--ai-color),
        var(--ai-color)
    );
}

/* This creates the GREEN shine for Bot mode */
.bot-icon-shine {
    background-image: linear-gradient(
        110deg,
        var(--bot-color),
        var(--bot-color),
        #ffffff, /* The white highlight */
        var(--bot-color),
        var(--bot-color)
    );
}
