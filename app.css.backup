/* inbox layout */
.inbox-view {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.inbox-layout {
  display: grid;
  height: calc(100vh - 72px);
  background: #0f172a;
  color: #e2e8f0;
}

.inbox-layout--desktop {
  grid-template-columns: 220px 320px 1fr;
}

.inbox-layout--mobile {
  grid-template-columns: 1fr;
}

.inbox-pane {
  border-right: 1px solid rgba(148, 163, 184, 0.2);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.inbox-pane--chat {
  border-right: none;
}

.inbox-pane__header,
.inbox-mobile-header {
  padding: 16px 20px;
  border-bottom: 1px solid rgba(148, 163, 184, 0.12);
}

.inbox-heading {
  font-size: 20px;
  font-weight: 600;
  margin: 0;
}

.inbox-filter-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 16px 12px;
}

.inbox-filter-group--mobile {
  flex-direction: row;
  flex-wrap: wrap;
  gap: 8px;
  padding: 12px 16px;
}

.inbox-filter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 12px;
  border-radius: 10px;
  font-size: 14px;
  background: rgba(148, 163, 184, 0.12);
  color: #cbd5f5;
  border: none;
  cursor: pointer;
  transition: background 0.2s ease, color 0.2s ease;
}

.inbox-filter--active {
  background: rgba(59, 130, 246, 0.2);
  color: #f8fafc;
}

/* conversation list */
.conversation-list {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.conversation-list__search {
  padding: 12px 16px;
  border-bottom: 1px solid rgba(148, 163, 184, 0.12);
}

.conversation-search {
  width: 100%;
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid rgba(148, 163, 184, 0.3);
  background: rgba(15, 23, 42, 0.8);
  color: #e2e8f0;
}

.conversation-list__scroll {
  overflow-y: auto;
  padding: 8px 0;
}

.conversation-row {
  width: 100%;
  text-align: left;
  background: transparent;
  border: none;
  padding: 12px 16px;
  display: flex;
  gap: 12px;
  cursor: pointer;
  transition: background 0.2s ease;
}

.conversation-row:hover,
.conversation-row--active {
  background: rgba(148, 163, 184, 0.12);
}

.conversation-row__indicator {
  width: 4px;
  border-radius: 2px;
  background: transparent;
}

.conversation-row--active .conversation-row__indicator {
  background: #3b82f6;
}

.conversation-row__title {
  margin: 0;
  font-size: 15px;
  font-weight: 600;
}

.conversation-row__preview {
  margin: 4px 0 0;
  font-size: 13px;
  color: rgba(226, 232, 240, 0.7);
}

/* chat pane */
.chat-pane {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.chat-pane__header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 18px 20px;
  border-bottom: 1px solid rgba(148, 163, 184, 0.12);
}

.chat-pane__back {
  background: none;
  border: 1px solid rgba(148, 163, 184, 0.4);
  color: #e2e8f0;
  border-radius: 999px;
  padding: 6px 14px;
  cursor: pointer;
}

.chat-pane__scroll {
  flex: 1;
  overflow-y: auto;
  padding: 24px 28px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.message-bubble {
  display: flex;
  flex-direction: column;
  gap: 6px;
  max-width: 70%;
}

.message-bubble--sent {
  align-self: flex-end;
  text-align: right;
}

.message-bubble--received {
  align-self: flex-start;
}

.message-bubble__body {
  background: rgba(59, 130, 246, 0.15);
  border-radius: 16px;
  padding: 12px 16px;
  color: #e2e8f0;
}

.message-bubble--sent .message-bubble__body {
  background: rgba(16, 185, 129, 0.18);
}

/* input */
.chat-pane__footer {
  border-top: 1px solid rgba(148, 163, 184, 0.12);
  padding: 16px 20px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.chat-input {
  display: flex;
  align-items: flex-end;
  gap: 12px;
}

.chat-input__field {
  flex: 1;
  resize: none;
  border: 1px solid rgba(148, 163, 184, 0.3);
  border-radius: 12px;
  padding: 10px 12px;
  background: rgba(15, 23, 42, 0.8);
  color: #f8fafc;
}

.chat-input__send {
  border: none;
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  color: white;
  border-radius: 999px;
  padding: 8px 18px;
  font-weight: 600;
  cursor: pointer;
}

