/* === START: Inbox Notification Bar CSS === */

/* Wrapper for the collapsible animation */
.inbox-notification-wrapper {
    max-height: 500px; /* A large height to show it's open */
    overflow: hidden;
    transition: max-height 0.5s ease-in-out, margin-bottom 0.5s ease-in-out;
    margin-bottom: 1.5rem; /* space below the bar */
}

.inbox-notification-wrapper.collapsed {
    max-height: 0;
    margin-bottom: 0;
}

/* The main notification bar styling */
.inbox-notification-bar {
    background: rgba(36, 41, 56, 0.8); /* Semi-transparent background */
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 1rem;
    overflow: hidden;
    height: 76px; /* Fixed height to contain one message at a time */
    display: flex;
    align-items: center;
}

/* A single notification message inside the bar */
.notification-message {
    display: flex;
    align-items: center;
    gap: 0.75rem; /* 12px */
    width: 100%;
}

.notification-message .avatar {
    width: 2.5rem; /* 40px */
    height: 2.5rem; /* 40px */
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-weight: bold;
}

.notification-message .content .username {
    font-weight: 600;
    font-size: 0.875rem; /* 14px */
}

.notification-message .content .text {
    color: var(--text-secondary);
    font-size: 0.875rem; /* 14px */
}

/* The button to hide/show the notification bar */
.notification-toggle-btn {
    display: block;
    margin: -1rem auto 1.5rem auto; /* Position it nicely between bar and content */
    width: 40px;
    height: 20px;
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
    border-radius: 0 0 12px 12px; /* Rounded bottom corners */
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
}

.notification-toggle-btn:hover {
    color: var(--text-primary);
    background-color: var(--hover-bg);
}

/* Animation for a new message appearing */
@keyframes notification-appear {
  from {
    opacity: 0;
    transform: translateY(15px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-notification-appear {
  animation: notification-appear 0.5s ease-out forwards;
}
