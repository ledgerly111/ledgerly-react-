/* Audio Visualizer */
.audio-visualizer {
  display: none;            /* hidden until playing */
  align-items: flex-end;
  height: 24px;
  gap: 4px;
  margin-left: 8px;
}
.audio-visualizer.is-playing {
  display: flex;
}
.visualizer-bar {
  width: 4px;
  height: 4px;              /* min height */
  border-radius: 4px;
  background-color: var(--ai-color);
  transition: height 120ms ease;
  will-change: height;
}

/* Dancing bars */
.audio-visualizer.is-playing .visualizer-bar {
  animation-name: dance;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}
.audio-visualizer.is-playing .visualizer-bar:nth-child(1) { animation-duration: 0.85s; animation-delay: 0s; }
.audio-visualizer.is-playing .visualizer-bar:nth-child(2) { animation-duration: 1.10s; animation-delay: 0.12s; }
.audio-visualizer.is-playing .visualizer-bar:nth-child(3) { animation-duration: 0.95s; animation-delay: 0.06s; }
.audio-visualizer.is-playing .visualizer-bar:nth-child(4) { animation-duration: 1.20s; animation-delay: 0.18s; }

@keyframes dance {
  0%   { height: 4px; }
  25%  { height: 16px; }
  50%  { height: 24px; }
  75%  { height: 10px; }
  100% { height: 4px; }
}








